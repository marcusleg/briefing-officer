generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../data/database.sqlite"
}

model Feed {
  id          Int       @id @default(autoincrement())
  title       String
  link        String    @unique
  lastFetched DateTime
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  articles    Article[]
}

model Article {
  id              Int                 @id @default(autoincrement())
  title           String
  publicationDate DateTime
  description     String?
  content         String?
  link            String              @unique
  readAt          DateTime?
  readLater       Boolean             @default(false)
  starred         Boolean             @default(false)
  createdAt       DateTime            @default(now())
  updatedAt       DateTime            @updatedAt
  feedId          Int
  feed            Feed                @relation(fields: [feedId], references: [id], onDelete: Cascade)
  aiSummary       ArticleAiSummary?
  readability     ArticleReadability?
}

model ArticleAiSummary {
  articleId Int      @id
  article   Article  @relation(fields: [articleId], references: [id], onDelete: Cascade)
  summary   String?
  lead      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model ArticleReadability {
  articleId   Int      @id
  article     Article  @relation(fields: [articleId], references: [id], onDelete: Cascade)
  content     String
  textContent String
  byLine      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
